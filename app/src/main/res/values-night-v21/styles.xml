<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <!-- Dark/Night mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_statusbar</item>
        <item name="colorAccent">
            @color/cast_libraries_material_featurehighlight_outer_highlight_default_color
        </item>
        <item name="android:statusBarColor">@color/color_primary_statusbar</item>
        <item name="android:navigationBarColor">@color/color_primary_statusbar</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:text">@color/text_color</item>
        <item name="android:colorBackground" tools:ignore="PrivateResource">
            @color/background_material
        </item>
        <item name="android:colorButtonNormal" tools:ignore="PrivateResource">
            @color/button_color
        </item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_statusbar</item>
        <item name="colorAccent">
            @color/cast_libraries_material_featurehighlight_outer_highlight_default_color
        </item>
        <item name="android:statusBarColor">@color/color_primary_statusbar</item>
        <item name="android:navigationBarColor">@color/color_primary_statusbar</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:text">@color/text_color</item>
        <item name="android:colorBackground" tools:ignore="PrivateResource">
            @color/background_material
        </item>
        <item name="android:colorButtonNormal" tools:ignore="PrivateResource">
            @color/button_color
        </item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDatePicker" parent="android:Theme.Holo">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
</resources>