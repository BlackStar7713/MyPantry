<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productItemRecyclerView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    tools:context=".activities.MyPantryActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/category_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/background_cardview"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/text_productName"
        android:textColor="@color/text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textSize="27sp"
        android:fontFamily="@font/proxima_nova_extra_condensed_bold"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/category_cardView"
        app:layout_constraintTop_toTopOf="@id/category_cardView" />

    <TextView
        android:id="@+id/text_productQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_marginTop="44dp"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:fontFamily="@font/proxima_nova_extra_condensed_bold"
        android:text="@string/Product_quantity" />

    <TextView
        android:id="@+id/text_productWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="66dp"
        android:textSize="16sp"
        android:fontFamily="@font/proxima_nova_extra_condensed_bold"
        android:text="@string/Product_weight"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/text_productVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/proxima_nova_extra_condensed_bold"
        android:text="@string/Product_volume"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/text_hasSugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MyPantryActivity_with_sugar"
        android:textSize="20sp"
        android:fontFamily="@font/proxima_nova_extra_condensed_bold"
        android:visibility="invisible"
        android:layout_marginStart="130dp"
        android:layout_gravity="end"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="70dp"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/text_hasSalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MyPantryActivity_with_salt"
        android:textSize="20sp"
        android:fontFamily="@font/proxima_nova_extra_condensed_bold"
        android:visibility="invisible"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/text_expirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        android:fontFamily="@font/proxima_nova_extra_condensed_bold"
        android:text="@string/Product_expiration_date"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/text_expirationDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="end"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:textSize="20sp"
        android:fontFamily="@font/proxima_nova_extra_condensed_bold"
        android:text=""
        android:textColor="@color/text_color"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>