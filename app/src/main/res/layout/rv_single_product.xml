<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productItemRecyclerView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="106dp"
    tools:context=".activities.MyPantryActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/product_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/text_productName"
        android:textColor="@color/text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/product_cardView"
        app:layout_constraintTop_toTopOf="@id/product_cardView" />

    <TextView
        android:id="@+id/text_productQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        android:text="@string/ProductDetailsActivity_quantity"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_productWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:text="@string/ProductDetailsActivity_weight"
        android:textColor="@color/text_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_productVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ProductDetailsActivity_volume"
        android:layout_marginStart="8dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/text_hasSugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MyPantryActivity_with_sugar"
        android:visibility="invisible"
        android:layout_marginStart="230dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/text_hasSalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MyPantryActivity_with_salt"
        android:visibility="invisible"
        android:layout_marginStart="300dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/text_expirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="@string/ProductDetailsActivity_expiration_date"
        android:textColor="@color/text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text_expirationDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="end"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:text=""
        android:textColor="@color/text_color"
        android:textSize="16sp"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>